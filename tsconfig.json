{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,

    "strict": true,

    "noEmit": true,

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "lib": ["ESNext", "DOM"],

    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },

    "types": [],
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.js", "**/*.cjs"],
  "exclude": ["node_modules", "core/main/deps/"]
}
